ifndef CONFIG
  CONFIG=Debug
endif

ifeq ($(CONFIG),Debug)
  BINDIR := ../../../bin
  LIBDIR := ../../../lib
  OBJDIR := obj/Debug
  OUTDIR := ../../../bin
  CPPFLAGS := -MD -D "NO_CAIRO" -I "../../"
  CFLAGS += $(CPPFLAGS) -fPIC -g
  CXXFLAGS := $(CFLAGS)
  LDFLAGS += -L$(BINDIR) -L$(LIBDIR) -shared ../../../bin/libclaro-base.so ../../../lib/libclaro-graphics-widgets.a ../../../lib/libclaro-graphics-platform.a
  LDDEPS := ../../../bin/libclaro-base.so ../../../lib/libclaro-graphics-widgets.a ../../../lib/libclaro-graphics-platform.a
  TARGET := libclaro-graphics.so
  BLDCMD = $(CC) -o $(OUTDIR)/$(TARGET) $(OBJECTS) $(LDFLAGS) $(RESOURCES)
endif

ifeq ($(CONFIG),Release)
  BINDIR := ../../../bin
  LIBDIR := ../../../lib
  OBJDIR := obj/Release
  OUTDIR := ../../../bin
  CPPFLAGS := -MD -D "NO_CAIRO" -I "../../"
  CFLAGS += $(CPPFLAGS) -fPIC -O2
  CXXFLAGS := $(CFLAGS)
  LDFLAGS += -L$(BINDIR) -L$(LIBDIR) -shared -s ../../../bin/libclaro-base.so ../../../lib/libclaro-graphics-widgets.a ../../../lib/libclaro-graphics-platform.a
  LDDEPS := ../../../bin/libclaro-base.so ../../../lib/libclaro-graphics-widgets.a ../../../lib/libclaro-graphics-platform.a
  TARGET := libclaro-graphics.so
  BLDCMD = $(CC) -o $(OUTDIR)/$(TARGET) $(OBJECTS) $(LDFLAGS) $(RESOURCES)
endif

OBJECTS := \
	$(OBJDIR)/layout_parser.o \
	$(OBJDIR)/layout.o \
	$(OBJDIR)/layout_heap.o \
	$(OBJDIR)/widget.o \
	$(OBJDIR)/graphics.o \
	$(OBJDIR)/image.o \
	$(OBJDIR)/font.o \
	$(OBJDIR)/system.o \
	$(OBJDIR)/status_icon.o \

CMD := $(subst \,\\,$(ComSpec)$(COMSPEC))
ifeq (,$(CMD))
  CMD_MKBINDIR := mkdir -p $(BINDIR)
  CMD_MKLIBDIR := mkdir -p $(LIBDIR)
  CMD_MKOUTDIR := mkdir -p $(OUTDIR)
  CMD_MKOBJDIR := mkdir -p $(OBJDIR)
else
  CMD_MKBINDIR := $(CMD) /c if not exist $(subst /,\\,$(BINDIR)) mkdir $(subst /,\\,$(BINDIR))
  CMD_MKLIBDIR := $(CMD) /c if not exist $(subst /,\\,$(LIBDIR)) mkdir $(subst /,\\,$(LIBDIR))
  CMD_MKOUTDIR := $(CMD) /c if not exist $(subst /,\\,$(OUTDIR)) mkdir $(subst /,\\,$(OUTDIR))
  CMD_MKOBJDIR := $(CMD) /c if not exist $(subst /,\\,$(OBJDIR)) mkdir $(subst /,\\,$(OBJDIR))
endif

.PHONY: clean

$(OUTDIR)/$(TARGET): $(OBJECTS) $(LDDEPS) $(RESOURCES)
	@echo Linking claro-graphics
	-@$(CMD_MKBINDIR)
	-@$(CMD_MKLIBDIR)
	-@$(CMD_MKOUTDIR)
	@$(BLDCMD)

clean:
	@echo Cleaning claro-graphics
	-@rm -rf $(OUTDIR)/$(TARGET) $(OBJDIR)

$(OBJDIR)/layout_parser.o: layout/layout_parser.c
	-@$(CMD_MKOBJDIR)
	@echo $(notdir $<)
	@$(CC) $(CFLAGS) -o $@ -c $<

